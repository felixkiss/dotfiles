[user]
  name = Felix Kiss
  email = felix@felixkiss.com
[push]
  default = simple
[color]
  ui = true
[core]
  editor = text --wait
  excludesfile = ~/.gitignore_global
[alias]
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  show-merged-branches = "!git branch --merged master | grep -v master | grep -v \\*"
  delete-merged-branches = "!git show-merged-branches | xargs -n 1 git branch -d"
  force-delete-merged-branches = "!git show-merged-branches | xargs -n 1 git branch -D"
  cleanup = remote prune origin
  wip = "!git add --all && git commit -m \"[wip]\""
  wipco = "!git wip && git checkout"
  co = checkout
  f = fetch
  p = pull
  m = merge
  ca = commit --amend
  actually = "!git add --all && git commit --amend --no-edit"

  # list aliases
  la = "!git config -l | grep alias | cut -c 7-"
[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
  path = /usr/local/bin
[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path =
[diff]
  tool = Kaleidoscope
[difftool]
  prompt = false
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true
[mergetool "sourcetree"]
  cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
  trustExitCode = true
[merge]
  tool = Kaleidoscope
[mergetool]
  prompt = false
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
